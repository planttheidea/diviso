{
  "author": "planttheidea",
  "bugs": {
    "url": "https://github.com/planttheidea/diviso/issues"
  },
  "dependencies": {
    "@types/use-sync-external-store": "^0.0.3",
    "redux-thunk": "^2.4.2",
    "use-sync-external-store": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/plugin-transform-react-jsx": "^7.19.0",
    "@babel/plugin-transform-typescript": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "0.1.0",
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/eslint": "^8.4.10",
    "@types/jest": "^29.2.4",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "concurrently": "^7.6.0",
    "css-loader": "^6.7.3",
    "esbuild": "^0.16.10",
    "eslint": "^8.30.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-webpack-plugin": "^3.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "json": "^11.0.0",
    "np": "^7.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "release-it": "^15.5.1",
    "rollup": "^3.7.5",
    "rollup-plugin-esbuild": "^5.0.0",
    "shx": "^0.3.4",
    "style-loader": "^3.3.1",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "engines": {
    "node": ">=12.20.0"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./esm/core.d.mts",
        "default": "./esm/core.mjs"
      },
      "types": "./core.d.ts",
      "module": "./esm/core.js",
      "default": "./core.js"
    },
    "./*": {
      "import": {
        "types": "./esm/*.d.mts",
        "default": "./esm/*.mjs"
      },
      "types": "./*.d.ts",
      "module": "./esm/*.js",
      "default": "./*.js"
    }
  },
  "homepage": "https://github.com/planttheidea/diviso#readme",
  "description": "Think local, act global. State management for modern JS apps.",
  "keywords": [
    "state"
  ],
  "license": "MIT",
  "main": "./core.js",
  "name": "diviso",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/planttheidea/diviso.git"
  },
  "scripts": {
    "build": "concurrently 'yarn:build:*'",
    "build:core": "NODE_ENV=production rollup -c --config-core",
    "build:react": "NODE_ENV=production rollup -c --config-react",
    "clean": "shx rm -rf dist",
    "copy": "npm run copy:core && npm run copy:package-json",
    "copy:core": "shx cp -r dist/core dist/esm && shx cp -r dist/*.d.ts dist/esm",
    "copy:react": "shx cp -r dist/react dist/esm && shx cp -r dist/*.d.ts dist/esm",
    "copy:package-json": "shx cp package.json README.md LICENSE dist && json -I -f dist/package.json -e \"this.private=false; this.devDependencies=undefined; this.optionalDependencies=undefined; this.scripts=undefined; this.prettier=undefined; this.jest=undefined;\"",
    "dev:core": "NODE_ENV=development webpack-dev-server --config=examples/core/webpack.config.js",
    "dev:react": "NODE_ENV=development webpack-dev-server --config=examples/react/webpack.config.js",
    "lint": "eslint src",
    "patch:esm-ts": "node -e \"require('shelljs').find('dist/esm/**/*.d.ts').forEach(f=>require('fs').copyFileSync(f,f.replace(/\\.ts$/,'.mts')))\"; shx sed -i \"s/ from '(\\..*)';$/ from '\\$1.mjs';/\" 'dist/esm/**/*.d.mts'; shx sed -i \"s/^declare module '(\\..*)'/declare module '\\$1.mjs'/\" 'dist/esm/**/*.d.mts'",
    "postbuild": "npm run copy && npm run patch:esm-ts",
    "prebuild": "npm run clean",
    "typecheck": "tsc --noEmit"
  },
  "type": "module",
  "types": "./code.d.ts",
  "version": "1.0.0"
}
